# Zscaler Mission Control Dashboard - Environment Configuration Template

# ===========================================
# ZPA (Zero Trust Private Access) Configuration
# ===========================================
ZPA_CLIENT_ID=your_zpa_client_id_here
ZPA_CLIENT_SECRET=your_zpa_client_secret_here
ZPA_CUSTOMER_ID=your_zpa_customer_id_here
ZPA_BASE_URL=https://config.private.zscaler.com
ZPA_API_VERSION=v1

# ===========================================
# ZIA (Zero Trust Internet Access) Configuration
# ===========================================
ZIA_USERNAME=your_zia_username_here
ZIA_PASSWORD=your_zia_password_here
ZIA_API_KEY=your_zia_api_key_here
ZIA_CLOUD_NAME=your_zia_cloud_name_here
ZIA_BASE_URL=https://admin.{cloud_name}.net
ZIA_API_VERSION=v1

# ===========================================
# ZDX (Digital Employee Experience) Configuration
# ===========================================
ZDX_API_KEY=your_zdx_api_key_here
ZDX_KEY_SECRET=your_zdx_key_secret_here
ZDX_BASE_URL=https://api.zdxcloud.net
ZDX_API_VERSION=v1

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://mission_control:password@localhost:5432/mission_control_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# ===========================================
# Redis Configuration (Caching)
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# ===========================================
# Application Configuration
# ===========================================
APP_NAME=Zscaler Mission Control Dashboard
APP_VERSION=1.0.0
APP_DEBUG=false
APP_SECRET_KEY=your_secret_key_here_minimum_32_characters
APP_HOST=0.0.0.0
APP_PORT=8000
APP_CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/mission_control/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===========================================
# Monitoring and Alerting
# ===========================================
ENABLE_METRICS=true
METRICS_PORT=9090
ALERT_EMAIL_SMTP_SERVER=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your_alert_email@company.com
ALERT_EMAIL_PASSWORD=your_alert_email_password
ALERT_EMAIL_FROM=mission-control@company.com
ALERT_EMAIL_TO=admin@company.com

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10

# ===========================================
# WebSocket Configuration
# ===========================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# ===========================================
# Development Configuration
# ===========================================
DEVELOPMENT_MODE=false
HOT_RELOAD=false
API_DOCS_ENABLED=true
API_DOCS_URL=/docs

# ===========================================
# Production Configuration
# ===========================================
SSL_CERT_PATH=/etc/ssl/certs/mission_control.crt
SSL_KEY_PATH=/etc/ssl/private/mission_control.key
HTTPS_REDIRECT=true

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mission-control-backups
BACKUP_S3_REGION=us-east-1

# ===========================================
# External Services
# ===========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://your-organization.webhook.office.com/webhookb2/YOUR_WEBHOOK_URL
SERVICENOW_INSTANCE_URL=https://your-company.service-now.com
SERVICENOW_USERNAME=your_servicenow_username
SERVICENOW_PASSWORD=your_servicenow_password
